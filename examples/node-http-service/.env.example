# Copy to .env and adjust as needed.
# Use ENVIRONMENT=development to run without Kafka (recommended for local).
# Use ENVIRONMENT=production when Kafka is running to send traces, metrics, and logs.

KAFKA_BROKERS=localhost:9092
ENVIRONMENT=development
# Optional: silence KafkaJS partitioner warning
# KAFKAJS_NO_PARTITIONER_WARNING=1
SERVICE_NAME=example-service
SERVICE_VERSION=0.0.1
LOG_LEVEL=info
TRACE_SAMPLING_RATE=1.0

# Optional: enable/disable Kafka per signal
# LOG_KAFKA_ENABLED=false
# METRICS_KAFKA_ENABLED=false
# TRACES_KAFKA_ENABLED=false
